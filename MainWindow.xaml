<Window x:Class="AzureIOTTrackerSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzureIOTTrackerSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="430" Width="736">
    <Grid>
        <Button Content="Send Messages" HorizontalAlignment="Left" Margin="603,315,0,0" VerticalAlignment="Top" Height="51" Width="105" Click="Button_Click"/>
